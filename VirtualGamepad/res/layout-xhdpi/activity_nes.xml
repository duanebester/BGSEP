<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="start" >
  
      <ImageView
      android:id="@+id/nes_background"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:src="@drawable/nes_background" />
      
<RelativeLayout
    android:layout_width="188dp" android:layout_centerVertical="true"
    android:layout_height="188dp" android:layout_marginLeft="17dp"
    >
      <ImageView
      android:id="@+id/nes_arrows_background"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:src="@drawable/nes_arrows_background" />
      

      
      <ImageView
      android:id="@+id/nes_joystick_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
 	  android:layout_centerInParent="true"
      android:src="@drawable/nes_joystick_button" />
      
      <ImageView
      android:id="@+id/nes_down_arrow"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/nes_joystick_button"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="17dp"
      android:src="@drawable/nes_down_arrow" />   
        
       <ImageView
      android:id="@+id/nes_up_arrow"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_above="@id/nes_joystick_button"
      android:layout_marginBottom="17dp"
      android:src="@drawable/nes_up_arrow" />
        

      
      <ImageView
      android:id="@+id/nes_right_arrow"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/nes_joystick_button"
      android:layout_centerVertical="true"
      android:layout_marginLeft="17dp"
      android:src="@drawable/nes_right_arrow" />
  

 	  <ImageView
      android:id="@+id/nes_left_arrow"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toLeftOf="@id/nes_joystick_button"
      android:layout_centerVertical="true"
      android:layout_marginRight="17dp"
      android:src="@drawable/nes_left_arrow" />

  
  	
      
</RelativeLayout>
    


  <ImageView      android:layout_centerVertical="true"
      android:id="@+id/nes_a_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_alignParentRight="true"
      android:layout_marginBottom="60dp"
      android:layout_marginRight="17dp"
      android:src="@drawable/nes_a_button" />

  <ImageView
      android:id="@+id/nes_b_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_toLeftOf="@id/nes_a_button"
      android:layout_marginBottom="60dp"
      android:layout_marginRight="8dp"
      android:src="@drawable/nes_b_button" />





  <ImageView
      android:id="@+id/nes_select_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="168dp"
      android:layout_marginLeft="233dp" 
      android:src="@drawable/nes_select_button" />

  <ImageView
      android:id="@+id/nes_start_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/nes_select_button"
      android:layout_marginTop="168dp"
      android:layout_marginLeft="30dp"
      android:src="@drawable/nes_start_button" />





</RelativeLayout>
