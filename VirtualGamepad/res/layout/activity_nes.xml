<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

  <ImageView
      android:id="@+id/imageView1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_centerVertical="true"
      android:src="@drawable/nes_background_small" />

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_alignParentBottom="true"
      android:layout_alignParentLeft="true"
      android:layout_marginBottom="156dp"
      android:layout_marginLeft="85dp"
      android:adjustViewBounds="true"
      android:src="@drawable/joystick_button" />

  <ImageView
      android:id="@+id/imageView3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:maxWidth="50dp"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:src="@drawable/a_button" />

  <ImageView
      android:id="@+id/imageView4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_marginRight="16dp"
      android:layout_toLeftOf="@+id/imageView3"
      android:src="@drawable/b_button" />

  <ImageView
      android:id="@+id/imageView5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_centerVertical="true"
      android:layout_marginLeft="51dp"
      android:src="@drawable/left_arrow" />

  <ImageView
      android:id="@+id/imageView6"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/imageView4"
      android:layout_alignLeft="@+id/imageView2"
      android:src="@drawable/down_arrow" />

  <ImageView
      android:id="@+id/imageView7"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/imageView6"
      android:layout_marginBottom="11dp"
      android:layout_marginLeft="10dp"
      android:layout_toRightOf="@+id/imageView6"
      android:src="@drawable/up_arrow" />

  <ImageView
      android:id="@+id/imageView8"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/imageView4"
      android:layout_marginBottom="13dp"
      android:layout_marginLeft="43dp"
      android:layout_toRightOf="@+id/imageView7"
      android:src="@drawable/start_button" />

  <ImageView
      android:id="@+id/imageView9"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/imageView4"
      android:layout_alignRight="@+id/imageView7"
      android:layout_marginBottom="24dp"
      android:layout_marginRight="24dp"
      android:src="@drawable/select_button" />

</RelativeLayout>
